{{>layout/header}}
<h1>게시글 수정</h1>

<div class="col-md-12">
    <div class="col-md-4">
        <form >
            <div class="form- group">
                <label for="id">글 번호</label>
                <input type="text" class="form-control" id="id" value="{{boards.id}}" readonly>
            </div>
            <div class="form-group">
                <label for="title">제목</label>
                <input type="text" class="form-control" id="title" value="{{boards.title}}">
            </div>
            <div class="form-group">
                <label for="author">작성자</label>
                <input type="text" class="form-control" id="author" value="{{boards.author}}" readonly>
            </div>
            <div class="form-group">
                <label for="content">제목</label>
                <input type="text" class="form-control" id="content" value="{{boards.content}}">
            </div>
        </form>
        <button type="button" class="btn btn-primary" id="btn-update">수정완료</button>
        <a href="/" role="button" class="btn btn-secondary">취소</a>
    </div>
</div>

{{>layout/footer}}